<!DOCTYPE html>
<html>
<head>
  <title>Login</title>
  <link rel="stylesheet" href="/styles.css">
  <script>
    function validateForm() {
      const user = document.forms["loginForm"]["userName"].value.trim();
      const pass = document.forms["loginForm"]["password"].value.trim();
      if (!user || !pass) {
        alert("Both username and password are required!");
        return false;
      }
      return true;
    }
  </script>
</head>
<body>
  <div class="container">
    <h2>Login</h2>
    <% if (typeof error !== "undefined") { %>
      <p class="error"><%= error %></p>
    <% } %>
    <form name="loginForm" action="/user/login" method="POST" onsubmit="return validateForm()">
      <input type="text" name="userName" placeholder="Username" required />
      <input type="password" name="password" placeholder="Password" required />
      <button type="submit">Login</button>
    </form>
    <p>New here? <a href="/user/register">Register</a></p>
  </div>
</body>
</html>
